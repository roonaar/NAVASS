<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NAVASS.Views.MainPage"
			 xmlns:viewmodel="clr-namespace:NAVASS.ViewModels"
			 x:DataType="viewmodel:MainPageViewModel">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="2*"/>
			<RowDefinition Height="2*"/>
		</Grid.RowDefinitions>
		<Grid Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="2*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<Label Grid.Row="0" Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" Padding="10" FontSize="Large">
				<Label.FormattedText>
					<FormattedString>
						<Span Text="{Binding Kurs}"/>
						<Span Text=" °"/>
					</FormattedString>
				</Label.FormattedText>
			</Label>
			<Label Grid.Row="0" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Padding="10" FontSize="Large">
				<Label.FormattedText>
					<FormattedString>
						<Span Text="{Binding Fart, StringFormat='{0:F1}'}"/>
						<Span Text=" kn"/>
					</FormattedString>
				</Label.FormattedText>
			</Label>
			<ProgressBar Grid.Row="1" Grid.ColumnSpan="2" Margin="10" Progress="{Binding Fremgang}" FlowDirection="RightToLeft"/>
			<Label Grid.Row="2"	Grid.Column="0" HorizontalOptions="End" VerticalOptions="Center" Padding="10" FontSize="Small">
				<Label.FormattedText>
					<FormattedString>
						<Span Text="{Binding Distanse_til_turn, StringFormat='{0:F2}'}"/>
						<Span Text=" nm"/>
					</FormattedString>
				</Label.FormattedText>
			</Label>
			<Label Grid.Row="2" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center" Padding="10" FontSize="Small">
				<Label.FormattedText>
					<FormattedString>
						<Span Text="{Binding Tid_til_turn, StringFormat='{0:hh\\:mm\\:ss}'}"/>
					</FormattedString>
				</Label.FormattedText>
			</Label>
			<Label Grid.Row="3" Grid.ColumnSpan="2" HorizontalOptions="Center" Padding="10">
				<Label.FormattedText>
					<FormattedString>
						<Span Text="STB " TextColor="YellowGreen"/>
						<Span Text="{Binding Kurssavvik}" FontAttributes="Bold"/>
						<Span Text=" nm"/>
					</FormattedString>
				</Label.FormattedText>
			</Label>
		</Grid>
		<StackLayout Grid.Row="1" Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
			<Frame WidthRequest="200" Margin="10">
				<FlexLayout Direction="Column">
					<SwipeView HeightRequest="80" Padding="10">
						<SwipeView.BottomItems>
							<SwipeItems>
								<SwipeItem Text="Start" BackgroundColor="PowderBlue"/>
							</SwipeItems>
						</SwipeView.BottomItems>
						<FlexLayout Direction="Column">
							<Label Text="Firestrek" TextColor="DimGray" HorizontalOptions="Center"/>
							<Label HorizontalOptions="Center">
								<Label.FormattedText>
									<FormattedString>
										<Span Text="{Binding Passeringsavstand}" FontSize="Large" FontAttributes="Bold"/>
										<Span Text=" nm"/>
									</FormattedString>
								</Label.FormattedText>
							</Label>
						</FlexLayout>
					</SwipeView>
					<SwipeView HeightRequest="100">
						<SwipeView.LeftItems>
							<SwipeItems>
								<SwipeItem Text="BB" BackgroundColor="IndianRed" Command="{Binding SettBabordPasseringCommand}"/>
							</SwipeItems>
						</SwipeView.LeftItems>
						<SwipeView.RightItems>
							<SwipeItems>
								<SwipeItem Text="STB" BackgroundColor="YellowGreen" Command="{Binding SettStyrbordPasseringCommand}"/>
							</SwipeItems>
						</SwipeView.RightItems>
						<FlexLayout Direction="Column" Padding="10">
                            <Label HorizontalOptions="Center" Padding="10">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="{Binding Passeringsside} " FontSize="Small" TextColor="{Binding Passeringsside_farge}"/>
										<Span Text=" "/>
										<Span Text="{Binding Planlagt_passering}" FontSize="Small" FontAttributes="Bold"/>
                                        <Span Text=" nm"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
							<Button x:Name="planlagt" Text="Planlagt passering" BackgroundColor="DimGrey" Command="{Binding SettPasseringsavstandCommand}"/>
						</FlexLayout>
					</SwipeView>
				</FlexLayout>
			</Frame>
			<Frame WidthRequest="200" Margin="10">
				<FlexLayout Direction="Column">
					<Label Text="Halvstrek" TextColor="DimGray" HorizontalOptions="Center"/>
					<Button FlexLayout.Basis="100" x:Name="halvstrek" BackgroundColor="Black" Text="0,10 nm" TextColor="WhiteSmoke" FontSize="Small"/>
					<SwipeView HeightRequest="50">
						<SwipeView.LeftItems>
							<SwipeItems>
								<SwipeItem Text="BB" BackgroundColor="IndianRed"/>
							</SwipeItems>
						</SwipeView.LeftItems>
						<SwipeView.RightItems>
							<SwipeItems>
								<SwipeItem Text="STB" BackgroundColor="YellowGreen"/>
							</SwipeItems>
						</SwipeView.RightItems>
						<StackLayout>
							<Label HorizontalOptions="Center" VerticalOptions="End" Text="BB" TextColor="IndianRed"/>
						</StackLayout>
					</SwipeView>
					<Button FlexLayout.Basis="50" x:Name="grader" BackgroundColor="Black" Text="6 °"/>
				</FlexLayout>
			</Frame>
		</StackLayout>
		<Frame Grid.Row="2">
			<FlexLayout Direction="Row">
				<ActivityIndicator IsRunning="{Binding IsRunning}" IsVisible="{Binding IsRunning}" VerticalOptions="Center" HorizontalOptions="Center"/>
				<Button Text="Beholden fart" Command="{Binding BeholdenFartCommand}"/>
			</FlexLayout>
		</Frame>
	</Grid>

</ContentPage>
